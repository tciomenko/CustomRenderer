<?xml version="1.0" encoding="UTF-8"?>
	<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CustomRenderers.Views.BirthdayCell"
    xmlns:local="clr-namespace:CustomRenderers.Views;assembly=CustomRenderers" >
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="White"  WidthRequest="80">
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
        <local:ImageCircle x:Name="ImageCircle"  HeightRequest="75" WidthRequest="75" HorizontalOptions="Center" Margin="4,0,10,0" VerticalOptions="Center"
                Aspect="AspectFill" ImageName="{Binding ImageFileName}"/>
        <StackLayout>
        <Label Text="{Binding Name}" FontSize="18" VerticalOptions="Center" />
        <Label Text="{Binding EventFriends}" FontSize="14" TextColor="Gray" VerticalOptions="Start" HorizontalOptions="Start"/>
        </StackLayout>
        
        <StackLayout HorizontalOptions="FillAndExpand">
        <Label Text="{Binding Time}" FontSize="12" TextColor="Gray" HorizontalOptions="End"  Margin="0,0,10,0" />
         
        </StackLayout>
    </StackLayout>
        <!--    <BoxView HeightRequest="8"  Color="Silver" VerticalOptions="Start"/>-->
    </StackLayout>
    
    </ViewCell>

