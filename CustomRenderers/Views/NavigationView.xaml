<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CustomRenderers.Views.NavigationView"
    Icon="hamburger.png"  Title="Personal Organiser">


	<StackLayout  Padding="0,45,0,-10">
        <StackLayout.Children>
            <Button Text="X" x:Name="ExitButton" BackgroundColor="Transparent"  HorizontalOptions="Start"  Clicked="FireClick"/>
        </StackLayout.Children>
        <ListView x:Name="listView" SeparatorVisibility="None" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <Label  Text="{Binding Title}" VerticalOptions="FillAndExpand" HorizontalOptions="Start" />
                            <Image Grid.Column="1" Source="{Binding IconSource}" HorizontalOptions="End"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
