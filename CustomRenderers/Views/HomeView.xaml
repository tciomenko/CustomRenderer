<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:CustomRenderers;assembly=CustomRenderers"
    x:Class="CustomRenderers.Views.HomeView"
    BackgroundImage="kITvxi0Tf34.jpg" Padding="0">
  <ContentPage.Content>
<!--        <ScrollView>-->
        <StackLayout HorizontalOptions="FillAndExpand">
        <Label Text="Good Morning!" FontSize="35" TextColor="White" HorizontalOptions="Center"/>
        <Button Image="circle.png" Opacity="1" Margin="20" />
            
                <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Margin="10">
                <Button Text="asd" HorizontalOptions="Start" />
                <Button Text="Февраль"  HorizontalOptions="Center"/>
                <Button Text="asd"  HorizontalOptions="End"/>
                </StackLayout>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal" Margin="10" HeightRequest="20">
                <Button Text="1" HorizontalOptions="Fill"/>
                <Button Text="2" HorizontalOptions="Fill"/>
                <Button Text="3" HorizontalOptions="Fill"/>
                <Button Text="4" HorizontalOptions="Fill" BorderRadius="10"   WidthRequest="20" FontSize="10" BackgroundColor="Green"/>
                <Button Text="5" HorizontalOptions="Fill"/>
                <Button Text="6" HorizontalOptions="Fill"/>
                <Button Text="7" HorizontalOptions="Fill"/>
            </StackLayout>

            <ListView x:Name="listView" RowHeight="80" BackgroundColor="White" HasUnevenRows="true"
                IsRefreshing="{Binding isBusy}"  Refreshing="Handle_Refreshing" IsPullToRefreshEnabled="true" ItemTapped="Handle_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
<!--   <local:Views.HomeViewCell Name="{Binding Name}" EventFriends="{Binding EventFriends}" Time="{Binding Time}"
                        ImageFilename="{Binding ImageFilename}"/>-->
<!--                        <ImageCell Detail="{Binding Time}" ImageSource="{Binding ImageFilename}" Text="{Binding Name}" />-->
                      <ViewCell >
                            <StackLayout BackgroundColor="White" Orientation="Horizontal" Margin="5,5,0,0">
                               <Image Source="{Binding ImageFilename}"  WidthRequest="80" HeightRequest="80"/>
                                <StackLayout Orientation="Vertical">
                                    <StackLayout Orientation="Horizontal" BackgroundColor="White">
                                    <Label Text="{Binding EventFriends}" TextColor="Black" />
                                    <Label Text="{Binding Name}" TextColor="Black" />
                                    </StackLayout >
                                    <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Time}" TextColor="Gray"/>
                                     <Label Text="{Binding Time}" TextColor="Gray"/>
                                    </StackLayout>
                                    </StackLayout>
                                </StackLayout> 

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
<!--        </ScrollView>-->
 </ContentPage.Content>
</ContentPage>
